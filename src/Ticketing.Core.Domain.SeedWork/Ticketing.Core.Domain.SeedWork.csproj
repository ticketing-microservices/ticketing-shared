<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <IsPackable>true</IsPackable>

    <!-- NuGet identity -->
    <PackageId>Ticketing.Core.Domain.SeedWork</PackageId>

    <!-- Package metadata -->
    <Title>Ticketing Core Domain SeedWork</Title>
    <Description>SeedWork building blocks for the Ticketing domain (DDD base types, value objects, domain events, etc.).</Description>
    <Authors>ticketing-microservices</Authors>
    <Company>ticketing-microservices</Company>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <!-- Repository traceability -->
    <RepositoryUrl>https://github.com/ticketing-microservices/ticketing-shared</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

    <!-- Quality -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
